<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/appNameIcon"
            android:layout_width="83dp"
            android:layout_height="83dp"
            android:layout_centerInParent="true"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/appNameIcon"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            android:text="咋是有文化的人"
            android:textColor="@color/black"
            android:textSize="16sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="30dp"
        android:layout_weight="1">

        <LinearLayout
            android:id="@+id/loginWxL"
            android:layout_width="240dp"
            android:layout_height="44dp"
            android:layout_centerInParent="true"
            android:background="@drawable/bg_corner_yellow_20"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/login_wechat" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="微信登录"
                android:textColor="@color/white"
                android:textSize="18sp" />
        </LinearLayout>

        <!--<com.android.widget.ZdButton-->
            <!--android:id="@+id/logonOthen"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_below="@+id/loginWxL"-->
            <!--android:layout_centerHorizontal="true"-->
            <!--android:layout_marginTop="20dp"-->
            <!--android:background="@null"-->
            <!--android:text="手机号登录"-->
            <!--android:textColor="@color/yellow"-->
            <!--android:visibility="visible" />-->

        <TextView
            android:id="@+id/protocolTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:text="@string/protocal" />
    </RelativeLayout>
</LinearLayout>